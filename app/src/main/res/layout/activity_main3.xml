<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity3">
<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="MainActivity3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_recipe2">

        <TextView
            android:id="@+id/Category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/orangered"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Recipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/orangered"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayoutIngredients"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background_border"
        >
        <TextView
            android:id="@+id/Ingredients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-condensed"
            android:scrollbars="vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="normal"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayoutInstructions"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/background_border"
        >
        <TextView
            android:id="@+id/Instructions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-condensed"
            android:scrollbars="vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="normal"
           />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/YoutubeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_border">

        <ImageView
            android:id="@+id/youtubeimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/youtube"
            tools:layout_editor_absoluteX="306dp"
            tools:layout_editor_absoluteY="12dp" />
        <TextView
            android:id="@+id/URL"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/youtubeimage"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:linksClickable="true"
            android:autoLink="web"
            android:textStyle="normal" />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>